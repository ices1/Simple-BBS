extends layout.pug

block content
    h3.text-center 登录
    div
         form(action="/login", method='POST')
            label(for="username").mt-4 用户名:
            input(type="text" name='username').form-control
            label(for="username").mt-4 密码：
            input(type="password" name='password').form-control
            label(for="username").mt-4 验证码：
            .container
                .row
                    input(type="text" name='captcha' class='col form-control mb-3')
                    img(src="/captcha", alt="captcha" class='col col-md-3 captcha')
            a(href='/forgot-password') 忘记密码
            button(class="btn btn-primary btn-lg btn-block mt-5") 提交
            