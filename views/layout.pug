doctype html
html
    head
        title Simple BBS
        link(rel='stylesheet' href='/static/css/common.css')

body
    div
        a(href="/") 首页 
        |
        if (user)
            | 
            a(href="/user/" + user.id)
                |
                span.user-name= user.username
                |
                img(src='/avatars/' + user.avatar alt=user.username).avatar
                |
            a(href="/add-post") 发布 
            |
            a(href="/logout") 退出 
        else
            |
            a(href="/login") 登录 
            |
            a(href="/register") 注册 
    
    block content

    footer
        p copyright